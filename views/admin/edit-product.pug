extends ../layouts/main-layout.pug

block style
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action=edit ? `/admin/edit-product` : "/admin/add-product" method="POST")
            .form-control
                label(for="title") Title
                input(type="text" name="title" id="title" value=edit?product.title:'')
                label(for="imageUrl") Image Url
                input(type="text" name="imageUrl" id="imageUrl" value=edit?product.imageUrl:'')
                label(for="price" type="number") Price
                input(type="text", name="price", id="price", value=edit ? product.price : '')
                label(for="description") Description
                textarea(cols="41", rows="10" type="text" name="description" id="description") #{edit ? product.description : ''}
                input(type="hidden", name="productId" value=edit?product.id:'') 
            
            button(type="submit") #{edit ? 'Edit Product' : 'Add Product'}